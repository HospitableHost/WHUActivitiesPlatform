/* pages/comment/comment.wxss */	page {
    width: 100%;
    background-color: #fff;
}


.swiper {
    min-height: 100vh;
}

.title {
    margin-bottom: 15rpx;
    min-height: 60rpx;
    font-size: 40rpx;
}

.date {
    min-height: 60rpx;
    color: #999;
}


.top {
    display: flex;
    justify-content: center;
    margin-bottom: 20rpx;
    width: 100%;
    height: 110rpx;
    color: #FFFFFF;
    line-height: 110rpx;
    background-color: #D28078;

    
}

.top-tab {
    height: 90%;
    margin: 0 66rpx;
    font-size: 32rpx;
}

.current {
    border-bottom: 6rpx solid #FFFFFF;
}


.underline {
    width: 100%;
    height: 2rpx;
    background-color: #F4F6F8;
}

.title {
    display: flex;
    justify-content: space-between;
    margin-bottom: 40rpx;
    font-size: 36rpx;
}

.row {
    display: flex;
    justify-content: space-between;
    margin: 20rpx 0;
}

.member {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 50px;
    padding: 20rpx;
}


.unread {
    color: #EE3131;
}

.i-avatar {
    margin-right: 30rpx;
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    overflow: hidden;
}

.c-row1{
    align-items: center;
    height: 50rpx;
    font-size: 28rpx;
    color: #888;

}

.c-row2{
    margin: 25rpx 0;
    font-size: 32rpx;
    
}

.c-row3{
    font-size: 28rpx;
    color: #888;
}

.r-row1 {
    margin-bottom: 20rpx;
    width: 100%;
    height: 50rpx;
    align-items: center;
}

.r-row2{
    margin-bottom: 25rpx;
}

.r-row3 {
    padding: 20rpx 15rpx;
    width: 100%;
    background-color: #F2F2F2;
    color: #5E5E5E;
    border-radius: 10rpx;
}

.r-row4 {
    margin: 25rpx 0;
    width: 100%;
    height: 2rpx;
    background-color: #E4E4E4;
    
}
  

  
  .activity {
    margin-bottom: 30rpx;
    padding: 15rpx 30rpx;
    width: 100%;
    border: 2rpx solid #DDD;
    border-radius: 20rpx;
    background-color: #fff;
  }
  
  .u-info {
    margin-bottom: 30rpx;
    display: flex;
    align-items: center;
    width: 100%;
    height: 125rpx;
  }
  
  .avatar {
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
    border-radius: 50%;
    overflow: hidden;
  }
  
  .u-right {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100rpx;
  }
  
  .time {
    color: #888;
    font-size: 28rpx;
  }
  
  .tag {
    margin:0 35rpx 40rpx 0;
    padding: 6rpx 20rpx;
    color: #fff;
    background-color: #D28078;
    border-radius: 6rpx;
    overflow: hidden;
    font-size: 28rpx;
  }
  
  .splitLine {
    width: 100%;
    height: 2px;
    background-color: #DDD;
  }
  
  .a-bottom {
    position: relative;
    margin-top: 40rpx;
    width: 100%;
  }
  
  .a-title {
    margin-bottom: 15rpx;
    font-size: 46rpx;
    font-weight:600;
  }
  
  .a-content {
    font-size: 28rpx;
  }
  
  .apply {
    margin: 30rpx;
    width: 220rpx;
    height: 65rpx;
    color: #fff;
    background-color:  #D28078;
    border-radius: 20rpx;
    overflow: hidden;
    font-size: 30rpx;
    line-height: 65rpx;
    text-align: center;
  }
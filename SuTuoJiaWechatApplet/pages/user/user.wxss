.u-info {
    display: flex;
    align-items: center;
    width: 100%;
    height: 225rpx;
    padding: 0 50rpx;
    color: #fff;
    background-color: #D28078;
    border-radius: 0 0 120rpx 120rpx;
    
}

.avatar {
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
    border-radius: 50%;
    overflow: hidden;
}

.u-right {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100rpx;
}

.functions {
    position: relative;
    margin-top: 20rpx;
}

.function {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 100rpx;
    padding: 0 25rpx;
    border-bottom: 2rpx solid #F5F4F9;
    background-color: #fff;
}

.l-icon {
    width: 68rpx;
    height: 68rpx;
    margin-right: 10rpx;
    line-height: 68rpx;
    text-align: center;
    border-radius: 50%;
}


.f-right {
    font-size: 26rpx;
    color: #9C9C9C;
}

.logout {
    width: 690rpx;
    height: 100rpx;
    margin: 30rpx auto 0 auto;
    border-radius: 50rpx;
    line-height: 100rpx;
    text-align: center;
    background-color: #4295FF;
    color: #fff;
}

.get-profile {
    position: absolute;
    z-index: 10;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}
/* pages/comment/comment.wxss */
page {
	width: 100%;
	background-color: #fff;
}


.swiper {
	min-height: 87vh;
}

.title {
	margin-bottom: 15rpx;
	min-height: 60rpx;
	font-size: 40rpx;
}

.date {
	min-height: 60rpx;
	color: #999;
}


.top {
	display: flex;
	justify-content: center;
	margin-bottom: 20rpx;
	width: 100%;
	height: 110rpx;
	color: #FFFFFF;
	line-height: 110rpx;
	background-color: #D28078;


}

.top-tab {
	height: 90%;
	margin: 0 66rpx;
	font-size: 32rpx;
}

.current {
	border-bottom: 6rpx solid #FFFFFF;
}


.underline {
	width: 100%;
	height: 2rpx;
	background-color: #F4F6F8;
}

.title {
	display: flex;
	justify-content: space-between;
	margin-bottom: 40rpx;
	font-size: 36rpx;
}

.row {
	display: flex;
	justify-content: space-between;
	margin: 20rpx 0;
}

.member {
	display: flex;
	justify-content: space-between;
	align-items: center;
	height: 50px;
	padding: 20rpx;
}


.unread {
	color: #EE3131;
}

.i-avatar {
	margin-right: 30rpx;
	width: 50rpx;
	height: 50rpx;
	border-radius: 50%;
	overflow: hidden;
}

.c-row1 {
	align-items: center;
	height: 50rpx;
	font-size: 28rpx;
	color: #888;

}

.c-row2 {
	margin: 25rpx 0;
	font-size: 32rpx;

}

.c-row3 {
	font-size: 28rpx;
	color: #888;
}

.r-row1 {
	margin-bottom: 20rpx;
	width: 100%;
	height: 50rpx;
	align-items: center;
}

.r-row2 {
	margin-bottom: 25rpx;
}

.r-row3 {
	padding: 20rpx 15rpx;
	width: 100%;
	background-color: #F2F2F2;
	color: #5E5E5E;
	border-radius: 10rpx;
}

.r-row4 {
	margin-top: 20rpx;
	width: 100%;
	text-align: right;
	color: #333;
}

.r-row5 {
	margin: 25rpx 0;
	width: 100%;
	height: 2rpx;
	background-color: #E4E4E4;

}

.reply {
	position: fixed;
	width: 100%;
	bottom: 20rpx;
}

.u-info {
	display: flex;
	margin-bottom: 20rpx;
	align-items: center;
	width: 100%;
}

.comment {
	margin: 0rpx 20rpx 0 0;
	background-color: #F2F2F2;
	width: 78%;
	padding: 10rpx 5rpx 10rpx 20rpx;
	border-radius: 20rpx;
}

.submit {
	flex: 1;
	height: 60rpx;
	color: #fff;
	border-radius: 30rpx;
	text-align: center;
	line-height: 60rpx;
	background-color: #D28078;
}